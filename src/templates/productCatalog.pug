doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Product Catalog
    style.
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
      }
      h1 {
        text-align: center;
        color: #2c3e50;
      }
      .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
      }
      .product-card {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: center;
      }
      .product-image {
        max-width: 100%;
        height: auto;
      }
      .product-price {
        font-weight: bold;
        color: #e74c3c;
      }

  body
    h1 #{companyName} Product Catalog

    .product-grid
      each product in products
        .product-card
          img.product-image(src=product.imageUrl, alt=product.name)
          h3= product.name
          p= product.description
          p.product-price $#{product.price.toFixed(2)}

    footer
      p For more information, contact us at #{contactEmail}